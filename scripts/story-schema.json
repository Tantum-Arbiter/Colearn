{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "story-data.schema.json",
  "title": "Story Data",
  "description": "Schema for story-data.json files",
  "type": "object",
  "required": ["id", "title", "category", "pages"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique story identifier (kebab-case)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "category": {
      "type": "string",
      "enum": ["personalized", "bedtime", "adventure", "nature", "friendship", "learning", "fantasy", "music", "activities", "growing"]
    },
    "tag": {
      "type": "string",
      "description": "Display tag with emoji"
    },
    "emoji": {
      "type": "string"
    },
    "coverImage": {
      "type": "string",
      "description": "Path to cover thumbnail"
    },
    "isAvailable": {
      "type": "boolean",
      "default": true
    },
    "ageRange": {
      "type": "string",
      "pattern": "^[0-9]+-[0-9]+$",
      "description": "Age range like 2-5"
    },
    "duration": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of pages"
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "localizedTitle": {
      "type": "object",
      "description": "Localized story titles for multi-language support",
      "properties": {
        "en": { "type": "string" },
        "pl": { "type": "string" },
        "es": { "type": "string" },
        "de": { "type": "string" },
        "fr": { "type": "string" },
        "it": { "type": "string" },
        "pt": { "type": "string" },
        "ja": { "type": "string" },
        "ar": { "type": "string" },
        "tr": { "type": "string" },
        "nl": { "type": "string" },
        "da": { "type": "string" },
        "la": { "type": "string" },
        "zh": { "type": "string" }
      }
    },
    "localizedDescription": {
      "type": "object",
      "description": "Localized story descriptions for multi-language support",
      "properties": {
        "en": { "type": "string" },
        "pl": { "type": "string" },
        "es": { "type": "string" },
        "de": { "type": "string" },
        "fr": { "type": "string" },
        "it": { "type": "string" },
        "pt": { "type": "string" },
        "ja": { "type": "string" },
        "ar": { "type": "string" },
        "tr": { "type": "string" },
        "nl": { "type": "string" },
        "da": { "type": "string" },
        "la": { "type": "string" },
        "zh": { "type": "string" }
      }
    },
    "isPremium": {
      "type": "boolean",
      "default": false
    },
    "author": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "description": "Filter tags for story categorization. 15 children's genres available.",
      "items": {
        "type": "string",
        "enum": ["calming", "bedtime", "adventure", "learning", "music", "family-exercises", "imagination-games", "animals", "friendship", "nature", "fantasy", "counting", "emotions", "silly", "rhymes"]
      }
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "pageNumber", "text"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "pageNumber": {
            "type": "integer",
            "minimum": 0
          },
          "type": {
            "type": "string",
            "enum": ["cover", "story"]
          },
          "text": {
            "type": "string"
          },
          "localizedText": {
            "type": "object",
            "description": "Localized page text for multi-language support",
            "properties": {
              "en": { "type": "string" },
              "pl": { "type": "string" },
              "es": { "type": "string" },
              "de": { "type": "string" },
              "fr": { "type": "string" },
              "it": { "type": "string" },
              "pt": { "type": "string" },
              "ja": { "type": "string" },
              "ar": { "type": "string" },
              "tr": { "type": "string" },
              "nl": { "type": "string" },
              "da": { "type": "string" },
              "la": { "type": "string" },
              "zh": { "type": "string" }
            }
          },
          "backgroundImage": {
            "type": "string",
            "description": "Asset path reference"
          },
          "characterImage": {
            "type": "string",
            "description": "Asset path reference"
          }
        }
      }
    }
  }
}

